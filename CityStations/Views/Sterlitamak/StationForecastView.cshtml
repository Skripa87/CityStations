@model CityStations.Models.ForecastContent
@{
    var cssClass = (string)ViewData["CssClass"];
    var predicts = (List<CityStations.Models.Predict>)Model.PresentContent();
}
@foreach (var item in predicts)
{
    <div class="row informationStationForecast">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 @cssClass @(cssClass+"forecastCssClass")">
            <p class="@(cssClass + "infotext")">@(item?.NumberBus ?? "")</p>
        </div>
        @if (cssClass.Contains("8"))
        {
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 @cssClass @(cssClass + "forecastCssClass")">
                <p class="@(cssClass + "infotext")">@(item?.EndStation ?? "")</p>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 @cssClass @(cssClass + "forecastCssClass")" style="text-align:right;padding-right:1px;">
                <p class="@(cssClass + "infotext")">@(item?.TimePredict ?? "")</p>
            </div>
        }
        else
        {
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 @cssClass @(cssClass + "forecastCssClass")">
                <p class="@(cssClass + "infotext")">@(item?.EndStation ?? "")</p>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 @cssClass @(cssClass + "forecastCssClass")">
                <p class="@(cssClass + "infotext")">@(item?.TimePredict ?? "")</p>
            </div>
        }
    </div>
}
