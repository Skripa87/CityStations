@model List<CityStations.Models.MassiveConfigureDevicePart>
<div class="card">
    <div class="card-header">
        <div class="col-lg-12 col-12">
            <div class="row">
                <div class=" col-lg-12 col-12">
                    <h4 class="card-title">Сетевые настройки</h4>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("MassiveConfigureStart", "Home", FormMethod.Post))
                {
                    <div id="tableContainer" class="table-responsive tableContainer">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%" class="table table-bordered table-hover serch-stations scrollTable">
                            <thead class="fixedHeader">
                            <tr>
                                <th class="m-th-header-table-1">Выбрать</th>
                                <th class="m-th-header-table-2">Наименование</th>
                                <th class="m-th-header-table-3">IP адрес</th>
                                <th class="m-th-header-table-4">Пароль</th>
                                <th class="m-th-header-table-5">Логин</th>
                            </tr>
                            </thead>
                            <tbody id="tableBodyId" class="scrollContent">
                            @foreach (var device in Model)
                            {
                                <tr class="variant">
                                    <th class="m-th-body-table-1"><input type="checkbox" name="isChecked" value="@device.StationId" /></th>
                                    <th class="m-th-body-table-2">@device.StationName</th>
                                    <th class="m-th-body-table-3">@device.IpAddress</th>
                                    <th class="m-th-body-table-4">@device.Password</th>
                                    <th class="m-th-body-table-5">@device.UserName</th>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                    <button type="submit">Start</button>
                }
            </div>
        </div>
    </div>
</div>
